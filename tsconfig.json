{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "noEmit": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"],
    "strict": true
  },
  "exclude": ["dist", "node_modules"]
}
